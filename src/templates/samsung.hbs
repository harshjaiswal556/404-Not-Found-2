              <form action="/samsung" method="post">
              <div class="wrapper">
                <input class="num" type="number" step="10" name="myprice" value="00">
              </div>
              
              
              <div class="input-groups">
                <div class="form-floating mb-3">
                  <input type="number" required="true" class="form-control" id="floatingInput" placeholder="1234567890" name="mynumber">
                  <label for="floatingInput">Number</label>
                </div>
                <div class="form-floating">
